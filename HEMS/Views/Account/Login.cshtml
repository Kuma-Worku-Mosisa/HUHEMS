@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - HEMS</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <style>
        :root {
            /* Define brand colors */
            --hu-primary: #1a8932;ቭ
            --hu-dark: #0f511d;
            --hu-mint-light: #f0f7f1; 
        }

        body {
            font-family: 'Inter', sans-serif;
            background: radial-gradient(circle at top left, #ffffff, var(--hu-mint-light));
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            color: #333;
        }

        /* Navbar Styling - Updated for light background */
        .top-navbar {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(0,0,0,0.08);
        }

        .brand-text {
            color: var(--hu-dark);
            letter-spacing: 0.5px;
        }

        .logo-img {
            width: 38px;
            height: 38px;
            object-fit: cover;
            /* Added slight border to logo to make it stand out on light bg */
            border: 1px solid rgba(26, 137, 50, 0.2);
        }

        /* Main Login Container */
        .login-container {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem 1rem;
        }

        /* NEW: Card with Green Stroke */
        .auth-card {
            border: 3px solid var(--hu-primary); /* The requested green stroke */
            border-radius: 12px;
            /* A much softer shadow just to lift it slightly */
            box-shadow: 0 10px 30px rgba(26, 137, 50, 0.1);
            background: white;
            max-width: 420px;
            width: 100%;
        }

        .card-header-custom {
            background: white; /* Clean white background */
            padding: 2.5rem 1rem 1rem;
            text-align: center;
        }

        .hero-logo {
            width: 85px;
            height: 85px;
            object-fit: cover;
            border-radius: 50%;
            /* Slight green glow around the main logo */
            box-shadow: 0 0 20px rgba(26, 137, 50, 0.2);
            margin-bottom: 1.5rem;
        }

        /* Button Styling */
        .btn-auth {
            background-color: var(--hu-primary);
            color: white;
            padding: 12px;
            font-weight: 700;
            border-radius: 8px;
            transition: all 0.3s ease;
            border: none;
        }

            .btn-auth:hover {
                background-color: var(--hu-dark);
                transform: translateY(-2px);
                box-shadow: 0 5px 15px rgba(26, 137, 50, 0.3);
            }

        /* Input Fields Polish */
        .form-floating > .form-control {
            border-radius: 8px;
            border: 2px solid #e9ecef;
            padding-left: 1rem;
        }

            .form-floating > .form-control:focus {
                border-color: var(--hu-primary);
                box-shadow: none; /* Clean focus, just the colored border */
            }

        .form-floating > label {
            padding-left: 1rem;
            color: #888;
        }

        /* Footer - updated color for contrast */
        .footer {
            color: var(--hu-dark);
            opacity: 0.8;
            padding: 1.5rem 0;
            margin-top: auto;
            font-weight: 500;
        }
    </style>
</head>

<body>

    <header class="top-navbar px-4 py-3 shadow-sm">
        <div class="d-flex align-items-center">
            <a asp-controller="Home" asp-action="Index" class="d-flex align-items-center text-decoration-none">
                <img src="~/images/haramaya-seal.jpg" alt="HU-HEMS" class="rounded-circle logo-img me-3" />
                <span class="h5 mb-0 fw-bold brand-text">HU-HEMS</span>
            </a>
        </div>
    </header>

    <main class="login-container">
        <div class="auth-card">
            <div class="card-header-custom">
                <img src="~/images/haramaya-seal.jpg" alt="HU Logo" class="hero-logo" />
                <h4 class="fw-bold mb-2" style="color: var(--hu-dark);">Welcome Back!</h4>
                <p class="text-muted mb-0">Please login to your account</p>
            </div>

            <div class="card-body p-4 pt-2">
                <form asp-action="Login" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3 text-center fw-bold"></div>

                    <div class="form-floating mb-3">
                        <input name="username" class="form-control" id="username" placeholder="name@example.com" required>
                        <label for="username">Username</label>
                    </div>

                    <div class="form-floating mb-4">
                        <input name="password" type="password" class="form-control" id="password" placeholder="Password" required>
                        <label for="password">Password</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-auth">
                            SECURE LOGIN <i class="bi bi-shield-lock ms-2"></i>
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </main>

    <footer class="footer">
        <div class="container-fluid text-center small">
            &copy; @DateTime.Now.Year - Haramaya University Software Engineering Holistic Exam Management System
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>