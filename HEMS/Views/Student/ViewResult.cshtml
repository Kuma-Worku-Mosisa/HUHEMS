@model int
@{
    ViewData["Title"] = "Exam Result";
    int totalQuestions = ViewBag.Total;
    string examTitle = ViewBag.ExamTitle;
    double percentage = totalQuestions > 0 ? Math.Round(((double)Model / totalQuestions) * 100, 2) : 0;
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <div class="card shadow border-0">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 4rem;"></i>
                    </div>

                    <h2 class="fw-bold mb-2">Exam Completed!</h2>
                    <p class="text-muted mb-4">You have successfully submitted <strong>@examTitle</strong></p>

                    <hr />

                    <div class="my-4">
                        <h4 class="text-dark">Your Score</h4>
                        <div class="display-3 fw-bold @(percentage >= 50 ? "text-success" : "text-danger")">
                            @Model / @totalQuestions
                        </div>
                        <p class="fs-5">(@percentage%)</p>
                    </div>

                    <div class="d-grid gap-2">
                        <a asp-action="Index" class="btn btn-primary btn-lg">Back to Dashboard</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // CLEANUP: Clear the timer from localStorage now that the exam is finished
        const examId = "@ViewBag.ExamId";
        if (examId) {
            localStorage.removeItem(`exam_end_time_${examId}`);
            console.log("Timer storage cleared for exam: " + examId);
        }
    </script>
}